{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    
    // ✅ CORREÇÃO CRÍTICA: Reverter para módulos que o Metro entende.
    // Isso resolve o erro 500.
    "moduleResolution": "node", 
    "module": "commonjs",     
    
    "target": "ES2022",
    "esModuleInterop": true,
    "baseUrl": ".",
    
    // Mantemos o alias para o TypeScript
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}