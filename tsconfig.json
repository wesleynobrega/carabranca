{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@contexts/*": ["./contexts/*"],
      "@lib/*": ["./lib/*"],
      "@services/*": ["./services/*"],
      "@repositories/*": ["./repositories/*"],
      "@types/*": ["./types/*"],
      "@backend/*": ["./backend/*"],
      "@backend/trpc/*": ["./backend/trpc/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
